@model IEnumerable<PROYECTO1_ED1.Models.ModeloPaciente>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de pacientes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DPI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teléfono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ÚltimaConsulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PróximaConsulta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripciónTratamiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DPI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teléfono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ÚltimaConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PróximaConsulta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripciónTratamiento)
            </td>
            <td>
                <a class="nav-link text-dark" asp-area="" asp-controller="ControladorPaciente" asp-action="IndiceEdicion">Asignar Consulta</a>
              
            </td>
        </tr>
}
    </tbody>
</table>
